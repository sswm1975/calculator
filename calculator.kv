<Container>:
    orientation: 'vertical'
    padding: 4

    label_info: id_label_info
    label_input: id_label_input

    Label:
        id: id_label_info
        text: ''
        font_size: "14sp"
        size_hint_y: 0.1
        halign: 'right'
        valign: 'center'
        color:'yellow'
        text_size: self.size

    Label:
        id: id_label_input
        text: ''
        font_size: "40sp"
        size_hint_y: 0.2
        halign: 'right'
        valign: 'center'
        text_size: self.size

    GridLayout:
        cols: 4

        Button:
            text: "1"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "2"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "3"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "+"
            background_color: "grey"
            on_release:
                root.add_in_formula(self)

        Button:
            text: "4"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "5"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "6"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "-"
            background_color: "grey"
            on_release:
                root.add_in_formula(self)

        Button:
            text: "7"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "8"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "9"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "x"
            background_color: "grey"
            on_release:
                root.add_in_formula(self)

        Button:
            text: "+/-"
            on_release:
                root.set_sign(self)
        Button:
            text: "0"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "."
            on_release:
                root.add_in_formula(self)
        Button:
            text: "/"
            background_color: "grey"
            on_release:
                root.add_in_formula(self)

        Button:
            text: "("
            background_color: "lightblue"
            on_release:
                root.add_in_formula(self)
        Button:
            text: ")"
            background_color: "lightblue"
            on_release:
                root.add_in_formula(self)
        Button:
            text: "C"
            background_color: "red"
            on_release:
                root.clear_formula(self)
        Button:
            text: "="
            background_color: "yellow"
            on_release:
                root.calc_result(self)